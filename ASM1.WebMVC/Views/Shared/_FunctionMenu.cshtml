@{
    var userRole = ViewBag.UserRole;
    var isLoggedIn = ViewBag.IsLoggedIn ?? false;
}

@if (isLoggedIn)
{
    <div class="row mb-3">
        <div class="col-12 text-center">
            <div class="btn-group" role="group">
                @if (userRole == "Admin")
                {
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">Quản lý sản phẩm</a>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-success">Quản lý người dùng</a>
                }
                else if (userRole == "EVM")
                {
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">Quản lý xe</a>
                    <a href="@Url.Action("ManageDealers", "EVM")" class="btn btn-outline-info">Quản lý đại lý</a>
                }
                else if (userRole == "DealerManager" || userRole == "DealerStaff")
                {
                    <a href="@Url.Action("Index", "CustomerService")" class="btn btn-outline-warning">Khách hàng</a>
                    <a href="@Url.Action("Index", "Sales")" class="btn btn-outline-success">Bán hàng</a>
                }
                else if (userRole == "Customer")
                {
                    <a href="@Url.Action("TestDrives", "CustomerService")" class="btn btn-outline-info">Lái thử</a>
                    <a href="@Url.Action("MyOrders", "Sales")" class="btn btn-outline-primary">Đơn hàng</a>
                }
            </div>
        </div>
    </div>
}