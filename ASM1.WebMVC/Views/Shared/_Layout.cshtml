<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASM1.WebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASM1.WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ASM1.WebMVC</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Always show Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>

                        @if (ViewBag.UserRole == "Customer" || ViewBag.UserRole == "customer")
                        {
                            <!-- Customer Menu -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-shield"></i> My Services
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="CustomerService" asp-action="MyTestDrives">
                                            <i class="fas fa-calendar-check"></i> My Test Drives
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="CustomerOrder" asp-action="MyOrders">
                                            <i class="fas fa-shopping-cart"></i> My Orders
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else if (ViewBag.UserRole == "Dealer")
                        {
                            <!-- Dealer Sales Management -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-shopping-cart"></i> Sales Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="DealerManagement" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt"></i> Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Sales" asp-action="Customers">
                                            <i class="fas fa-users"></i> Customers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="DealerOrder" asp-action="AllOrders">
                                            <i class="fas fa-list"></i> All Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="DealerOrder" asp-action="PendingOrders">
                                            <i class="fas fa-clock"></i> Pending Orders
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Dealer Customer Service -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-headset"></i> Customer Service
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="CustomerService" asp-action="TestDrives">
                                            <i class="fas fa-calendar-plus"></i> Schedule Test Drives
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="CustomerService" asp-action="Feedbacks">
                                            <i class="fas fa-comments"></i> View Feedbacks
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Default menus for Admin/DealerManager/DealerStaff -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-car"></i> Product Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Manufacturers">
                                        <i class="fas fa-industry"></i> Manufacturers
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="VehicleModels">
                                        <i class="fas fa-car"></i> Vehicle Models
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Inventory">
                                        <i class="fas fa-warehouse"></i> Inventory
                                    </a></li>
                                </ul>
                            </li>
                        }

                        <!-- Privacy always visible -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (ViewBag.IsLoggedIn == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @ViewBag.UserName
                                    <span class="badge bg-primary ms-1">@ViewBag.UserRole</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">@ViewBag.UserName</h6></li>
                                    <li><small class="dropdown-item-text text-muted">Role: @ViewBag.UserRole</small></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- TempData Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ASM1.WebMVC - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
