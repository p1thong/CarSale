@model IEnumerable<Order>
@{
    ViewData["Title"] = "Tất cả đơn hàng";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list text-primary me-2"></i>
            Tất cả đơn hàng
        </h2>
        <div>
            <a href="@Url.Action("PendingOrders", "DealerOrder")" class="btn btn-warning">
                <i class="fas fa-clock me-2"></i>
                Đơn chờ xác nhận
            </a>
            <span class="badge bg-primary fs-6 ms-2">@Model.Count() đơn</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Filter tabs -->
        <ul class="nav nav-tabs mb-3" id="orderTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                    Tất cả (@Model.Count())
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                    Chờ xác nhận (@Model.Count(o => o.Status == "Pending"))
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="confirmed-tab" data-bs-toggle="tab" data-bs-target="#confirmed" type="button">
                    Đã xác nhận (@Model.Count(o => o.Status == "Confirmed"))
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button">
                    Hoàn thành (@Model.Count(o => o.Status == "Completed"))
                </button>
            </li>
        </ul>

        <!-- Tab content -->
        <div class="tab-content" id="orderTabsContent">
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                @await Html.PartialAsync("_OrderTable", Model)
            </div>
            <div class="tab-pane fade" id="pending" role="tabpanel">
                @await Html.PartialAsync("_OrderTable", Model.Where(o => o.Status == "Pending"))
            </div>
            <div class="tab-pane fade" id="confirmed" role="tabpanel">
                @await Html.PartialAsync("_OrderTable", Model.Where(o => o.Status == "Confirmed"))
            </div>
            <div class="tab-pane fade" id="completed" role="tabpanel">
                @await Html.PartialAsync("_OrderTable", Model.Where(o => o.Status == "Completed"))
            </div>
        </div>
    }
    else
    {
        <!-- Empty state -->
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có đơn hàng nào</h4>
                <p class="text-muted mb-4">Hiện tại chưa có đơn hàng nào từ khách hàng.</p>
            </div>
        </div>
    }
</div>