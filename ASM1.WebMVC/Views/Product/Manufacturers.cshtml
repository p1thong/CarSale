@model IEnumerable<ASM1.Repository.Models.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-industry text-primary"></i> Manufacturers Management
                    </h2>
                    <p class="text-muted">Manage vehicle manufacturers and their information</p>
                </div>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addManufacturerModal">
                        <i class="fas fa-plus"></i> Add Manufacturer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Row -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Search</label>
                            <input type="text" class="form-control" id="searchInput" placeholder="Search manufacturers...">
                        </div>
                        <div class="col-md-3 mb-2">
                            <label class="form-label">Country</label>
                            <select class="form-select" id="countryFilter">
                                <option value="">All Countries</option>
                                <option value="Japan">Japan</option>
                                <option value="Germany">Germany</option>
                                <option value="USA">USA</option>
                                <option value="South Korea">South Korea</option>
                                <option value="Italy">Italy</option>
                                <option value="France">France</option>
                                <option value="UK">United Kingdom</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-2">
                            <label class="form-label">Status</label>
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-2">
                            <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                <i class="fas fa-times"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manufacturers Grid -->
    <div class="row" id="manufacturersGrid">
        @if (Model != null && Model.Any())
        {
            @foreach (var manufacturer in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4 manufacturer-card" data-country="@(manufacturer.Country ?? "Unknown")" data-status="Active">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="manufacturer-logo">
                                    <i class="fas fa-industry fa-3x text-primary"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("EditManufacturer", new { id = manufacturer.ManufacturerId })">
                                            <i class="fas fa-edit"></i> Edit
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("VehicleModels", new { manufacturerId = manufacturer.ManufacturerId })">
                                            <i class="fas fa-car"></i> View Models
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="#" onclick="deleteManufacturer(@manufacturer.ManufacturerId)">
                                            <i class="fas fa-trash"></i> Delete
                                        </a></li>
                                    </ul>
                                </div>
                            </div>
                            
                            <h5 class="card-title">@manufacturer.Name</h5>
                            <p class="text-muted small mb-2">@(manufacturer.Name)</p>
                            
                            <div class="manufacturer-details">
                                <div class="row text-sm mb-2">
                                    <div class="col-6">
                                        <i class="fas fa-flag text-muted"></i> @(manufacturer.Country ?? "Unknown")
                                    </div>
                                    <div class="col-6">
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                </div>
                                <div class="row text-sm mb-2">
                                    <div class="col-12">
                                        <i class="fas fa-car text-muted"></i> @manufacturer.VehicleModels.Count() Models
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(manufacturer.Address))
                        {
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt"></i> @manufacturer.Address
                                </small>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-industry fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No manufacturers found</h4>
                    <p class="text-muted">Start by adding your first manufacturer</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addManufacturerModal">
                        <i class="fas fa-plus"></i> Add First Manufacturer
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div class="row" id="noResults" style="display: none;">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No manufacturers found</h4>
                <p class="text-muted">Try adjusting your search criteria</p>
            </div>
        </div>
    </div>
</div>

<!-- Add Manufacturer Modal -->
<div class="modal fade" id="addManufacturerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus"></i> Add New Manufacturer
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addManufacturerForm" asp-action="CreateManufacturer" method="post">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Manufacturer Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Name" required placeholder="Enter manufacturer name (e.g., Toyota, BMW)">
                            <span class="form-text">Use the official manufacturer name as it appears in the market.</span>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Country</label>
                            <select class="form-select" name="Country">
                                <option value="">-- Select Country --</option>
                                <option value="Japan">Japan</option>
                                <option value="Germany">Germany</option>
                                <option value="USA">USA</option>
                                <option value="South Korea">South Korea</option>
                                <option value="Italy">Italy</option>
                                <option value="France">France</option>
                                <option value="UK">United Kingdom</option>
                                <option value="China">China</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" name="Address" rows="3" placeholder="Enter manufacturer headquarters address"></textarea>
                            <span class="form-text">Optional: Full headquarters address for reference.</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addManufacturerForm" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Manufacturer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search and filter functionality
        document.getElementById('searchInput').addEventListener('input', filterManufacturers);
        document.getElementById('countryFilter').addEventListener('change', filterManufacturers);
        document.getElementById('statusFilter').addEventListener('change', filterManufacturers);

        function filterManufacturers() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const countryFilter = document.getElementById('countryFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            
            const cards = document.querySelectorAll('.manufacturer-card');
            let visibleCount = 0;
            
            cards.forEach(card => {
                const name = card.querySelector('.card-title').textContent.toLowerCase();
                const country = card.dataset.country;
                const status = card.dataset.status;
                
                const matchesSearch = name.includes(searchTerm);
                const matchesCountry = !countryFilter || country === countryFilter;
                const matchesStatus = !statusFilter || status === statusFilter;
                
                if (matchesSearch && matchesCountry && matchesStatus) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            document.getElementById('noResults').style.display = visibleCount === 0 ? 'block' : 'none';
        }

        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('countryFilter').value = '';
            document.getElementById('statusFilter').value = '';
            filterManufacturers();
        }

        function editManufacturer(id) {
            window.location.href = `/Product/EditManufacturer/${id}`;
        }

        function viewModels(id) {
            window.location.href = `/Product/VehicleModels?manufacturerId=${id}`;
        }

        function deleteManufacturer(id) {
            if (confirm('Are you sure you want to delete this manufacturer? This action cannot be undone.')) {
                // Send DELETE request to controller
                fetch(`/Product/DeleteManufacturer/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload(); // Refresh page to show updated list
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting manufacturer');
                });
            }
        }
    </script>
}