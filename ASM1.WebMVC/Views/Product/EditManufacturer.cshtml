@model ASM1.Repository.Models.Manufacturer

@{
    ViewData["Title"] = "Edit Manufacturer";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Manufacturer</h1>
        <a href="@Url.Action("Manufacturers")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Manufacturers
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Manufacturer Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditManufacturer" method="post">
                        <input asp-for="ManufacturerId" type="hidden" />
                        
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Manufacturer Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter manufacturer name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Country" class="form-label">Country</label>
                            <input asp-for="Country" class="form-control" placeholder="Enter country" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter manufacturer address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Manufacturer
                                </button>
                                <div>
                                    <a href="@Url.Action("Manufacturers")" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                    @if (Model?.VehicleModels?.Any() != true)
                                    {
                                        <button type="button" class="btn btn-danger ml-2" onclick="deleteManufacturer(@Model.ManufacturerId)">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">Manufacturer Details</h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td><strong>ID:</strong></td>
                            <td>@Model.ManufacturerId</td>
                        </tr>
                        <tr>
                            <td><strong>Vehicle Models:</strong></td>
                            <td>
                                <span class="badge badge-info">
                                    @(Model.VehicleModels?.Count() ?? 0) models
                                </span>
                            </td>
                        </tr>
                    </table>
                    
                    @if (Model.VehicleModels?.Any() == true)
                    {
                        <hr>
                        <h6 class="font-weight-bold">Vehicle Models:</h6>
                        <ul class="list-unstyled">
                            @foreach (var vehicleModel in Model.VehicleModels.Take(5))
                            {
                                <li class="small text-muted">• @vehicleModel.Name</li>
                            }
                            @if (Model.VehicleModels.Count() > 5)
                            {
                                <li class="small text-muted">• ... and @(Model.VehicleModels.Count() - 5) more</li>
                            }
                        </ul>
                        
                        <div class="alert alert-warning small">
                            <i class="fas fa-exclamation-triangle"></i>
                            Cannot delete manufacturer with existing vehicle models.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function deleteManufacturer(manufacturerId) {
            if (confirm('Are you sure you want to delete this manufacturer? This action cannot be undone.')) {
                $.post('@Url.Action("DeleteManufacturer")', { id: manufacturerId })
                    .done(function(response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Manufacturers")';
                        } else {
                            alert('Error: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('An error occurred while deleting the manufacturer.');
                    });
            }
        }

        $(document).ready(function() {
            // Form validation
            $('form').on('submit', function(e) {
                var name = $('#Name').val().trim();
                if (name === '') {
                    e.preventDefault();
                    alert('Manufacturer name is required.');
                    $('#Name').focus();
                    return false;
                }
            });
        });
    </script>
}