@{
    ViewData["Title"] = "Tạo báo giá";
    var customer = ViewBag.Customer as ASM1.Repository.Models.Customer;
    var customers = ViewBag.Customers as IEnumerable<ASM1.Repository.Models.Customer>;
    var vehicleVariants = ViewBag.VehicleVariants as IEnumerable<ASM1.Repository.Models.VehicleVariant>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Tạo báo giá mới</h2>
                <a asp-action="Quotations" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Thông tin báo giá</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateQuotation" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khách hàng *</label>
                                    <select name="customerId" class="form-select" required>
                                        <option value="">Chọn khách hàng...</option>
                                        @if (customers != null)
                                        {
                                            @foreach (var c in customers)
                                            {
                                                var isSelected = customer?.CustomerId == c.CustomerId;
                                                <option value="@c.CustomerId" selected="@isSelected">
                                                    @c.FullName (@c.Email)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Xe *</label>
                                    <select name="variantId" class="form-select" required>
                                        <option value="">Chọn xe...</option>
                                        @if (vehicleVariants != null)
                                        {
                                            @foreach (var variant in vehicleVariants)
                                            {
                                                var modelName = variant.VehicleModel?.Name ?? "Unknown";
                                                var color = variant.Color ?? "N/A";
                                                <option value="@variant.VariantId">
                                                    @modelName - @variant.Version (@color)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Giá báo giá (VNĐ) *</label>
                                    <input type="number" name="price" class="form-control" 
                                           step="1000" min="0" required 
                                           placeholder="Nhập giá báo giá" />
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Quotations" class="btn btn-outline-secondary">Hủy bỏ</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-plus"></i> Tạo báo giá
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (customer != null)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6>Thông tin khách hàng</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Tên:</strong> @customer.FullName</p>
                        <p><strong>Email:</strong> @customer.Email</p>
                        <p><strong>SĐT:</strong> @customer.Phone</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>