@model ASM1.Service.Services.Interfaces.CustomerProfileDto

@{
    ViewData["Title"] = $"Customer Profile - {Model.Customer.FullName}";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-user-circle text-primary"></i> Customer Profile</h2>
                    <p class="text-muted">Complete customer information and history</p>
                </div>
                <div>
                    <a asp-controller="Sales" asp-action="Customers" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Customers
                    </a>
                    <button class="btn btn-primary" onclick="editCustomer()">
                        <i class="fas fa-edit"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Customer Information Card -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Customer Information</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4>@Model.Customer.FullName</h4>
                    <p class="text-muted">Customer ID: #@Model.Customer.CustomerId.ToString("000")</p>
                    
                    <div class="row text-start">
                        <div class="col-12 mb-2">
                            <strong><i class="fas fa-envelope text-muted"></i> Email:</strong><br>
                            <a href="mailto:@Model.Customer.Email">@Model.Customer.Email</a>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Customer.Phone))
                        {
                            <div class="col-12 mb-2">
                                <strong><i class="fas fa-phone text-muted"></i> Phone:</strong><br>
                                <a href="tel:@Model.Customer.Phone">@Model.Customer.Phone</a>
                            </div>
                        }
                        @if (Model.Customer.Birthday.HasValue)
                        {
                            <div class="col-12 mb-2">
                                <strong><i class="fas fa-birthday-cake text-muted"></i> Birthday:</strong><br>
                                @Model.Customer.Birthday.Value.ToString("dd/MM/yyyy")
                            </div>
                        }
                        <div class="col-12 mb-2">
                            <strong><i class="fas fa-building text-muted"></i> Dealer:</strong><br>
                            @Model.Customer.Dealer.FullName
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@Model.Orders.Count()</h4>
                            <small>Total Orders</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">$@Model.TotalPurchaseAmount.ToString("N0")</h4>
                            <small>Total Spent</small>
                        </div>
                        <div class="col-6 mt-2">
                            <h4 class="text-warning">@Model.TestDrives.Count()</h4>
                            <small>Test Drives</small>
                        </div>
                        <div class="col-6 mt-2">
                            <h4 class="text-info">@Model.Feedbacks.Count()</h4>
                            <small>Feedbacks</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Outstanding Balance -->
            @if (Model.OutstandingBalance > 0)
            {
                <div class="card mt-3">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Outstanding Balance</h6>
                    </div>
                    <div class="card-body text-center">
                        <h3 class="text-danger">$@Model.OutstandingBalance.ToString("N0")</h3>
                        <button class="btn btn-warning btn-sm">
                            <i class="fas fa-dollar-sign"></i> Process Payment
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs" id="customerTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button">
                        <i class="fas fa-shopping-cart"></i> Orders (@Model.Orders.Count())
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="testdrives-tab" data-bs-toggle="tab" data-bs-target="#testdrives" type="button">
                        <i class="fas fa-car"></i> Test Drives (@Model.TestDrives.Count())
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="feedbacks-tab" data-bs-toggle="tab" data-bs-target="#feedbacks" type="button">
                        <i class="fas fa-comments"></i> Feedbacks (@Model.Feedbacks.Count())
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="timeline-tab" data-bs-toggle="tab" data-bs-target="#timeline" type="button">
                        <i class="fas fa-timeline"></i> Timeline
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="customerTabContent">
                <!-- Orders Tab -->
                <div class="tab-pane fade show active" id="orders" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            @if (Model.Orders.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Order ID</th>
                                                <th>Vehicle</th>
                                                <th>Order Date</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                            {
                                                <tr>
                                                    <td><strong>#@order.OrderId.ToString("000")</strong></td>
                                                    <td>@order.Variant.VehicleModel.Name - @order.Variant.Version</td>
                                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <span class="badge @GetOrderStatusBadge(order.Status)">
                                                            @order.Status
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @if (order.SalesContracts.Any())
                                                        {
                                                            <span class="text-success">$@order.SalesContracts.First().TotalAmount?.ToString("N0")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">TBD</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Sales" asp-action="OrderPayments" asp-route-orderId="@order.OrderId" 
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-credit-card"></i> Payments
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Orders Yet</h5>
                                    <p class="text-muted">This customer hasn't placed any orders</p>
                                    <a asp-controller="Sales" asp-action="CreateOrderDirect" asp-route-customerId="@Model.Customer.CustomerId" 
                                       class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Create Order
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Test Drives Tab -->
                <div class="tab-pane fade" id="testdrives" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            @if (Model.TestDrives.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Test Drive ID</th>
                                                <th>Vehicle</th>
                                                <th>Scheduled Date</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var testDrive in Model.TestDrives.OrderByDescending(td => td.ScheduledDate))
                                            {
                                                <tr>
                                                    <td><strong>#@testDrive.TestDriveId.ToString("000")</strong></td>
                                                    <td>@testDrive.Variant.VehicleModel.Name - @testDrive.Variant.Version</td>
                                                    <td>@testDrive.ScheduledDate?.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <span class="badge @GetTestDriveStatusBadge(testDrive.Status ?? "Unknown")">
                                                            @testDrive.Status
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-eye"></i> View
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-car fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Test Drives</h5>
                                    <p class="text-muted">This customer hasn't scheduled any test drives</p>
                                    <a asp-controller="CustomerService" asp-action="ScheduleTestDrive" asp-route-customerId="@Model.Customer.CustomerId" 
                                       class="btn btn-primary">
                                        <i class="fas fa-calendar"></i> Schedule Test Drive
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Feedbacks Tab -->
                <div class="tab-pane fade" id="feedbacks" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            @if (Model.Feedbacks.Any())
                            {
                                @foreach (var feedback in Model.Feedbacks.OrderByDescending(f => f.FeedbackDate))
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h6 class="mb-1">
                                                        @if (feedback.Rating.HasValue)
                                                        {
                                                            for (int i = 1; i <= 5; i++)
                                                            {
                                                                <i class="fas fa-star @(i <= feedback.Rating ? "text-warning" : "text-muted")"></i>
                                                            }
                                                            <span class="ms-2">(@feedback.Rating/5)</span>
                                                        }
                                                    </h6>
                                                    <p class="mb-1">@feedback.Content</p>
                                                </div>
                                                <small class="text-muted">@feedback.FeedbackDate?.ToString("dd/MM/yyyy")</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Feedback</h5>
                                    <p class="text-muted">This customer hasn't provided any feedback</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Timeline Tab -->
                <div class="tab-pane fade" id="timeline" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <div class="timeline">
                                <!-- Customer registration -->
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <h6>Customer Registration</h6>
                                        <small class="text-muted">Customer joined</small>
                                    </div>
                                </div>

                                <!-- Recent activities -->
                                @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate).Take(5))
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-success"></div>
                                        <div class="timeline-content">
                                            <h6>Order Placed</h6>
                                            <small class="text-muted">@order.OrderDate?.ToString("dd/MM/yyyy")</small>
                                            <div>@order.Variant.VehicleModel.Name</div>
                                        </div>
                                    </div>
                                }

                                @foreach (var testDrive in Model.TestDrives.OrderByDescending(td => td.ScheduledDate).Take(3))
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-info"></div>
                                        <div class="timeline-content">
                                            <h6>Test Drive</h6>
                                            <small class="text-muted">@testDrive.ScheduledDate?.ToString("dd/MM/yyyy")</small>
                                            <div>@testDrive.Variant.VehicleModel.Name</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetOrderStatusBadge(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Processing" => "bg-info",
            "Completed" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetTestDriveStatusBadge(string status)
    {
        return status switch
        {
            "Scheduled" => "bg-warning text-dark",
            "Confirmed" => "bg-info",
            "Completed" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    .timeline-item {
        position: relative;
        margin-bottom: 25px;
    }
    .timeline-marker {
        position: absolute;
        left: -34px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
    }
    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: -29px;
        top: 12px;
        width: 2px;
        height: calc(100% + 13px);
        background-color: #dee2e6;
    }
</style>

