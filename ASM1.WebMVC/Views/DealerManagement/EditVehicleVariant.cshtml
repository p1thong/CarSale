@model VehicleVariant
@{
    ViewData["Title"] = "Chỉnh sửa phiên bản xe";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-edit text-warning me-2"></i>
            Chỉnh sửa phiên bản xe
        </h2>
        <a href="@Url.Action("VehicleVariants")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin phiên bản xe #@Model.VariantId
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditVehicleVariant" method="post">
                        <input asp-for="VariantId" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="VehicleModelId" class="form-label">
                                    <i class="fas fa-car me-2"></i>Mẫu xe <span class="text-danger">*</span>
                                </label>
                                <select asp-for="VehicleModelId" class="form-select">
                                    <option value="">-- Chọn mẫu xe --</option>
                                    @if (ViewBag.VehicleModels != null)
                                    {
                                        @foreach (var vehicleModel in (IEnumerable<VehicleModel>)ViewBag.VehicleModels)
                                        {
                                            <option value="@vehicleModel.VehicleModelId">
                                                @vehicleModel.Name (@(vehicleModel.Manufacturer?.Name ?? "N/A"))
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="VehicleModelId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Version" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Phiên bản <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Version" class="form-control" placeholder="Ví dụ: Standard, Premium, Luxury..." />
                                <span asp-validation-for="Version" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Color" class="form-label">
                                    <i class="fas fa-palette me-2"></i>Màu sắc <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Color" class="form-select">
                                    <option value="">-- Chọn màu sắc --</option>
                                    <option value="Trắng">Trắng</option>
                                    <option value="Đen">Đen</option>
                                    <option value="Bạc">Bạc</option>
                                    <option value="Xám">Xám</option>
                                    <option value="Đỏ">Đỏ</option>
                                    <option value="Xanh dương">Xanh dương</option>
                                    <option value="Xanh lá">Xanh lá</option>
                                    <option value="Vàng">Vàng</option>
                                    <option value="Nâu">Nâu</option>
                                    <option value="Tím">Tím</option>
                                </select>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductYear" class="form-label">
                                    <i class="fas fa-calendar me-2"></i>Năm sản xuất <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ProductYear" class="form-select">
                                    <option value="">-- Chọn năm sản xuất --</option>
                                    @for (int year = DateTime.Now.Year + 1; year >= 2020; year--)
                                    {
                                        <option value="@year">@year</option>
                                    }
                                </select>
                                <span asp-validation-for="ProductYear" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-dollar-sign me-2"></i>Giá bán (VND) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Price" type="number" step="1000000" min="0" class="form-control" 
                                       placeholder="Ví dụ: 500000000" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                                <small class="form-text text-muted">Giá bán tính bằng VND</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label">
                                    <i class="fas fa-boxes me-2"></i>Số lượng <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Quantity" type="number" min="0" class="form-control" placeholder="Ví dụ: 10" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <small class="form-text text-muted">Số lượng xe có trong kho</small>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("VehicleVariants")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}