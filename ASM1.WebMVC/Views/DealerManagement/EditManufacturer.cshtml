@model Manufacturer
@{
    ViewData["Title"] = "Chỉnh sửa hãng xe";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-edit text-warning me-2"></i>
            Chỉnh sửa hãng xe
        </h2>
        <a href="@Url.Action("Manufacturers")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hãng xe #@Model.ManufacturerId
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditManufacturer" method="post">
                        <input asp-for="ManufacturerId" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Tên hãng xe <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Ví dụ: Toyota, Honda..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">
                                    <i class="fas fa-globe me-2"></i>Quốc gia <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Country" class="form-control" placeholder="Ví dụ: Japan, Korea..." />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" 
                                      placeholder="Địa chỉ trụ sở chính của hãng xe..."></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Manufacturers")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}