@model IEnumerable<VehicleModel>
@{
    ViewData["Title"] = "Quản lý mẫu xe";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-car text-primary me-2"></i>
            Quản lý mẫu xe
        </h2>
        <div>
            <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Dashboard
            </a>
            <a href="@Url.Action("CreateVehicleModel")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Thêm mẫu xe
            </a>
        </div>
    </div>

    <!-- Vehicle Models List -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Danh sách mẫu xe (@Model.Count() mẫu)
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Thông tin xe</th>
                                <th>Hãng xe</th>
                                <th>Loại xe</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicleModel in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(vehicleModel.ImageUrl))
                                        {
                                            <img src="@vehicleModel.ImageUrl" alt="@vehicleModel.Name" 
                                                 class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center" 
                                                 style="width: 80px; height: 60px;">
                                                <i class="fas fa-car text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@vehicleModel.Name</strong>
                                            <span class="badge bg-primary ms-2">#@vehicleModel.VehicleModelId</span>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="fas fa-industry me-2"></i>@(vehicleModel.Manufacturer?.Name ?? "N/A")
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@vehicleModel.Category</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditVehicleModel", new { id = vehicleModel.VehicleModelId })" 
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmDelete(@vehicleModel.VehicleModelId, '@vehicleModel.Name')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-car fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có mẫu xe nào</h5>
                    <p class="text-muted">Hãy thêm mẫu xe đầu tiên</p>
                    <a href="@Url.Action("CreateVehicleModel")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Thêm mẫu xe
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa mẫu xe <strong id="modelName"></strong>?</p>
                <p class="text-danger">
                    <i class="fas fa-warning me-2"></i>
                    Hành động này không thể hoàn tác!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(modelId, modelName) {
            document.getElementById('modelName').textContent = modelName;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteVehicleModel")/' + modelId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}