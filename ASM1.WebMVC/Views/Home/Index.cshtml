@model IEnumerable<ASM1.Repository.Models.VehicleVariant>
@{
    ViewData["Title"] = "Danh sách xe";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5">
                    <i class="fas fa-car text-primary"></i> Danh sách xe có sẵn
                </h1>
                <div class="text-muted">
                    <i class="fas fa-info-circle"></i> Tổng cộng: @Model.Count() xe
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h4><i class="fas fa-exclamation-circle"></i> Chưa có xe nào</h4>
                    <p>Hiện tại chưa có xe nào trong hệ thống. Vui lòng quay lại sau.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var vehicle in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm hover-shadow">
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    @if (!string.IsNullOrEmpty(vehicle.VehicleModel?.ImageUrl))
                                    {
                                        <img src="@vehicle.VehicleModel.ImageUrl" alt="@vehicle.VehicleModel?.Name" class="img-fluid" style="max-height: 180px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-car fa-5x text-muted"></i>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-primary">
                                        @vehicle.VehicleModel?.Name
                                        <small class="text-muted">@vehicle.Version</small>
                                    </h5>
                                    <p class="card-text">
                                        <strong>Hãng:</strong> @vehicle.VehicleModel?.Manufacturer?.Name<br>
                                        <strong>Loại:</strong> @vehicle.VehicleModel?.Category<br>
                                        <strong>Màu:</strong> <span class="badge bg-secondary">@vehicle.Color</span><br>
                                        <strong>Năm sản xuất:</strong> @vehicle.ProductYear
                                    </p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h4 class="text-success mb-0">
                                                @string.Format("{0:N0}", vehicle.Price) VND
                                            </h4>
                                        </div>
                                        <div class="row g-1">
                                            <div class="col-4">
                                                <a href="@Url.Action("VehicleDetail", "Home", new { id = vehicle.VariantId })" 
                                                   class="btn btn-outline-primary btn-sm w-100">
                                                    <i class="fas fa-eye"></i> Chi tiết
                                                </a>
                                            </div>
                                            <div class="col-4">
                                                <a href="@Url.Action("ScheduleTestDrive", "CustomerService", new { variantId = vehicle.VariantId })" 
                                                   class="btn btn-success btn-sm w-100">
                                                    <i class="fas fa-car"></i> Lái thử
                                                </a>
                                            </div>
                                            <div class="col-4">
                                                <a href="@Url.Action("CreateOrder", "Sales", new { variantId = vehicle.VariantId })" 
                                                   class="btn btn-primary btn-sm w-100">
                                                    <i class="fas fa-cart-plus"></i> Đặt hàng
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease-in-out;
    }
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        transform: translateY(-2px);
        transition: all 0.3s ease-in-out;
    }
    .card-img-top {
        border-radius: 0.375rem 0.375rem 0 0;
    }
</style>
